  "shortcuts": [
    {
      "name": "Quick Sample Scan",
      "short_name": "Scan",
      "description": "Quickly scan and register a mosquito pool sample",
      "url": "/mobile/quick-scan",
      "icon": "/icons/scan-shortcut.png"
    },
    {
      "name": "PCR Status",
      "short_name": "PCR",
      "description": "Check PCR batch status and results",
      "url": "/mobile/pcr-status",
      "icon": "/icons/pcr-shortcut.png"
    },
    {
      "name": "Surveillance Map",
      "short_name": "Map",
      "description": "View surveillance map and alerts",
      "url": "/surveillance/map",
      "icon": "/icons/map-shortcut.png"
    },
    {
      "name": "Lab Dashboard",
      "short_name": "Dashboard",
      "description": "Access main laboratory dashboard",
      "url": "/dashboard",
      "icon": "/icons/dashboard-shortcut.png"
    }
  ],
  "categories": [
    "medical",
    "productivity",
    "utilities",
    "health"
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "auto"
  },
  "file_handlers": [
    {
      "action": "/import-data",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "application/vnd.ms-excel": [".xlsx"]
      },
      "icons": [
        {
          "src": "/icons/file-import.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+labguard",
      "url": "/handle-protocol?url=%s"
    }
  ]
}